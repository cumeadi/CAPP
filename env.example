# CAPP Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://capp_user:capp_password@localhost:5432/capp_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PAYMENTS=capp.payments
KAFKA_TOPIC_SETTLEMENTS=capp.settlements

# Aptos Blockchain Configuration
APTOS_NODE_URL=https://fullnode.mainnet.aptoslabs.com
APTOS_FAUCET_URL=https://faucet.mainnet.aptoslabs.com
APTOS_PRIVATE_KEY=your-aptos-private-key-here
APTOS_ACCOUNT_ADDRESS=your-aptos-account-address-here

# Mobile Money Operator (MMO) Configuration

# M-Pesa Configuration
MMO_MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MMO_MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MMO_MPESA_BUSINESS_SHORT_CODE=your-business-short-code
MMO_MPESA_PASSKEY=your-mpesa-passkey

# Orange Money Configuration
MMO_ORANGE_API_KEY=your-orange-api-key
MMO_ORANGE_API_SECRET=your-orange-api-secret

# MTN Mobile Money Configuration
MMO_MTN_API_KEY=your-mtn-api-key
MMO_MTN_API_SECRET=your-mtn-api-secret

# Airtel Money Configuration
MMO_AIRTEL_API_KEY=your-airtel-api-key
MMO_AIRTEL_API_SECRET=your-airtel-api-secret

# Exchange Rate API Configuration
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4/latest

# Temporal Workflow Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=capp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true

# Payment Configuration
MAX_PAYMENT_AMOUNT=10000.0
MIN_PAYMENT_AMOUNT=1.0
DEFAULT_TRANSACTION_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_THRESHOLD_SCORE=0.8

# Compliance
COMPLIANCE_ENABLED=true
SANCTIONS_CHECK_ENABLED=true

# Offline Support
OFFLINE_MODE_ENABLED=true
OFFLINE_SYNC_INTERVAL=300

# Performance
MAX_CONCURRENT_PAYMENTS=10000
PAYMENT_BATCH_SIZE=100

# SMS Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=your-sms-from-number

# USSD Configuration
USSD_PROVIDER=africastalking
USSD_API_KEY=your-ussd-api-key
USSD_API_SECRET=your-ussd-api-secret 