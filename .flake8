[flake8]
# Maximum line length
max-line-length = 88

# Extend default ignore list
extend-ignore =
    E203,  # Whitespace before ':' (conflicts with Black)
    E501,  # Line too long (handled by Black)
    W503,  # Line break before binary operator (conflicts with Black)
    E402,  # Module level import not at top of file
    F401,  # Module imported but unused (in __init__.py files)

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    migrations,
    alembic/versions

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811,S101
    */migrations/*:E501

# Inline comments
inline-quotes = double

# Import order checking
import-order-style = google
application-import-names = applications,tests,packages

# Docstring conventions
docstring-convention = google
