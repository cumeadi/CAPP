# CAPP Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=CAPP
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Security (⚠️ CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql+asyncpg://capp_user:capp_password@localhost/capp_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PAYMENTS=capp.payments
KAFKA_TOPIC_SETTLEMENTS=capp.settlements

# Aptos Blockchain (Testnet)
APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com
APTOS_PRIVATE_KEY=your-aptos-private-key-here
APTOS_ACCOUNT_ADDRESS=your-aptos-account-address-here

# Mobile Money Operators - M-Pesa (Daraja API)
MMO_MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MMO_MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MMO_MPESA_BUSINESS_SHORT_CODE=your-business-shortcode
MMO_MPESA_PASSKEY=your-passkey

# Mobile Money Operators - MTN Mobile Money
MMO_MTN_API_KEY=your-mtn-api-key
MMO_MTN_API_SECRET=your-mtn-api-secret

# Mobile Money Operators - Orange Money
MMO_ORANGE_API_KEY=your-orange-api-key
MMO_ORANGE_API_SECRET=your-orange-api-secret

# Mobile Money Operators - Airtel Money
MMO_AIRTEL_API_KEY=your-airtel-api-key
MMO_AIRTEL_API_SECRET=your-airtel-api-secret

# Exchange Rate API (ExchangeRate-API.com)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_BASE_URL=https://v6.exchangerate-api.com/v6

# Temporal Workflow
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=capp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Payment Configuration
MAX_PAYMENT_AMOUNT=10000.0
MIN_PAYMENT_AMOUNT=1.0
DEFAULT_TRANSACTION_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_THRESHOLD_SCORE=0.8

# Compliance
COMPLIANCE_ENABLED=true
SANCTIONS_CHECK_ENABLED=true

# Offline Support
OFFLINE_MODE_ENABLED=true
OFFLINE_SYNC_INTERVAL=300

# Performance
MAX_CONCURRENT_PAYMENTS=10000
PAYMENT_BATCH_SIZE=100

# SMS/USSD Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

USSD_PROVIDER=africastalking
USSD_API_KEY=
USSD_API_SECRET=
